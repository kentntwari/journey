generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  firstName String    @map("first_name")
  lastName  String    @map("last_name")
  email     String    @unique
  journeys  Journey[]
}

model Journey {
  id      String   @id @default(cuid())
  title   String   @unique
  slug    String   @unique
  isEnded Boolean? @default(false)

  checkpoints Checkpoint[]
  User        User?        @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId      String?
  createdAt   DateTime     @default(now()) @map("created_at") @db.Date
  updatedAt   DateTime     @updatedAt @map("updated_at") @db.Date

  @@index([id, slug])
  @@map("journeys")
}

model Checkpoint {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  startDate   DateTime @map("start_date") @db.Date

  journey    Journey?    @relation(fields: [journeyId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  journeyId  String?
  milestones Milestone[]
  challenges Challenge[]
  failures   Failure[]

  createdAt DateTime @default(now()) @map("created_at") @db.Date
  updatedAt DateTime @updatedAt @map("updated_at") @db.Date

  @@index([id, slug])
  @@map("checkpoints")
}

model Milestone {
  id          String   @id @default(cuid())
  slug        String   @unique
  status      String   @default("in progress")
  deadline    DateTime @db.Date
  description String

  Checkpoint   Checkpoint? @relation(fields: [checkpointId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  checkpointId String?

  createdAt DateTime @default(now()) @map("created_at") @db.Date
  updatedAt DateTime @updatedAt @map("updated_at") @db.Date

  @@index([id, slug])
  @@map("milestones")
}

model Challenge {
  id           String      @id @default(cuid())
  slug         String      @unique
  description  String
  Checkpoint   Checkpoint? @relation(fields: [checkpointId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  checkpointId String?

  createdAt DateTime @default(now()) @map("created_at") @db.Date
  updatedAt DateTime @updatedAt @map("updated_at") @db.Date

  @@index([id, slug])
  @@map("challenges")
}

model Failure {
  id           String      @id @default(cuid())
  slug         String      @unique
  description  String
  Checkpoint   Checkpoint? @relation(fields: [checkpointId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  checkpointId String?

  createdAt DateTime @default(now()) @map("created_at") @db.Date
  updatedAt DateTime @updatedAt @map("updated_at") @db.Date

  @@index([id, slug])
  @@map("failures")
}
